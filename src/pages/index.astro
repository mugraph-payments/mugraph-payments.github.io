---
import { Button } from "~/components/Button/Button";
import Layout from "~/layouts/Layout.astro";
import { Card, CardContent, CardHeader } from "~/components/Card/Card";
import { ExclamationCircleIcon } from "@heroicons/react/24/outline";
---

<Layout title="Mugraph">
  <main class="px-8 md:px-16 max-w-6xl mx-auto flex flex-col gap-24 pt-12">
    <section class="text-center h-[40vh] flex flex-col justify-center">
      <h1 class="text-5xl font-bold mb-4 text-heading">
        Fast Private Payments
      </h1>
      <p class="mb-8 max-w-2xl mx-auto">
        μgraph is an open-source protocol built on Cardano, designed to address
        key challenges in cryptocurrency adoption for everyday transactions
      </p>
      <div class="flex justify-center space-x-4">
        <Button variant="inverse"> Get Started </Button>
        <Button variant="outline"> Contribute </Button>
      </div>
    </section>

    <section class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
      {
        [
          {
            title: "Zero Knowledge",
            description:
              "Employs advanced Zero-Knowledge Proofs (ZKPs) to ensure transaction privacy and confidentiality.",
          },
          {
            title: "Scalable",
            description:
              "Achieves high scalability through a modified version of the Hydra Tail protocol, enabling fast and efficient transactions.",
          },
          {
            title: "Self-Custody",
            description:
              "Ensures users maintain full control over their funds at all times, enhancing security and trust in the system.",
          },
          {
            title: "Cross-Chain Compatible",
            description:
              "Designed with cross-chain interoperability in mind, allowing for seamless transactions across different blockchain networks.",
          },
        ].map((feature) => (
          <div class="text-center">
            <div class="w-12 h-12 bg-foreground rounded-full mx-auto mb-4 flex items-center justify-center">
              <ExclamationCircleIcon className="w-8 h-8 text-background" />
            </div>
            <h3 class="text-xl font-semibold mb-2 text-heading">
              {feature.title}
            </h3>
            <p>{feature.description}</p>
          </div>
        ))
      }
    </section>

    <section>
      <Card>
        <CardHeader />
        <CardContent>
          <div
            class="flex flex-col md:flex-row justify-center items-center gap-4 text-foreground"
          >
            <h2
              class="text-3xl font-bold mb-4 text-center md:text-left w-max whitespace-nowrap text-heading"
            >
              Why Mugraph
            </h2>
            <div class="w-full">
              <p class="mb-4 text-center md:text-left">
                μgraph addresses critical challenges in crypto adoption by
                offering a solution that combines the security and
                decentralization of blockchain with the speed and privacy of
                traditional finance. This makes it an essential tool for those
                who value financial freedom and confidentiality in an
                increasingly digital economy.
              </p>
              <Button className="w-full md:w-max"> Learn More </Button>
            </div>
          </div>
        </CardContent>
      </Card>
    </section>

    <section class="mx-auto">
      <h2 class="text-3xl font-bold mb-12 text-center text-heading">Roadmap</h2>
      <div class="space-y-8">
        {
          [1, 2, 3, 4].map((milestone) => (
            <div class="flex flex-col md:flex-row items-center gap-4">
              <div class="contents">
                <h3 class="text-xl font-semibold whitespace-nowrap">
                  Milestone {milestone}
                </h3>

                <span class="h-1 md:h-8 w-full max-w-32 md:w-4 md:border-l border-muted-foreground border-b md:border-b-0" />
              </div>
              <p>
                Rhoncus dui feugiat varius augue praesent gravida nec. Sed arcu
                tristique fames suscipit, arcu lacinia nec lorem
              </p>
            </div>
          ))
        }
      </div>
    </section>
  </main>
</Layout>
